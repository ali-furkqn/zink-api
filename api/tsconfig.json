{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "typeRoots": ["node_modules/@types","src/@types"],
    "paths": {
      "@/scripts/*": ["./scripts/*"],
      "@/*": ["./src/*"]
    }
  }
}
