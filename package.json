{
  "name": "api",
  "version": "0.0.1",
  "description": "Zink API",
  "author": {
    "email": "mail@alifurkan.co",
    "name": "Ali Furkan",
    "url": "https://alifurkan.co"
  },
  "private": true,
  "license": "MPL-2.0 License",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "prettier:watch": "onchange \"src/**/*.ts\" -- prettier --write \"{{changed}}\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node -r tsconfig-paths/register dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@eventonehq/fly": "^2.0.0-beta.1",
    "@firebase/storage": "^0.3.42",
    "@nestjs/common": "^7.0.0",
    "@nestjs/config": "^0.5.0",
    "@nestjs/core": "^7.0.0",
    "@nestjs/jwt": "^7.1.0",
    "@nestjs/platform-fastify": "7.4.4",
    "@nestjs/typeorm": "^7.1.0",
    "@sendgrid/mail": "^7.2.4",
    "@webundsoehne/nest-fastify-file-upload": "^1.0.0",
    "argon2": "^0.26.2",
    "axios": "^0.21.1",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "fastify-formbody": "^5.0.0",
    "fastify-helmet": "^5.0.1",
    "fastify-multer": "^2.0.2",
    "firebase": "^7.19.1",
    "got": "^11.6.0",
    "jsonwebtoken": "^8.5.1",
    "marked": "^2.0.0",
    "memory-cache": "^0.2.0",
    "mime-types": "^2.1.27",
    "mongodb": "^3.5.9",
    "morgan": "^1.10.0",
    "nest-router": "^1.0.9",
    "nestjs-rate-limit": "^1.0.6",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.6.3",
    "sharp": "^0.27.0",
    "typeorm": "^0.2.25",
    "uuid": "^8.3.0",
    "ws": "^7.3.1",
    "xhr2": "^0.2.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.0.0",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.6.5",
    "@types/express": "^4.17.7",
    "@types/jest": "25.2.3",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/marked": "^1.1.0",
    "@types/memory-cache": "^0.2.1",
    "@types/mime-types": "^2.1.0",
    "@types/mongoose": "^5.7.31",
    "@types/morgan": "^1.9.1",
    "@types/node": "^13.9.1",
    "@types/sharp": "^0.25.1",
    "@types/supertest": "^2.0.8",
    "@types/uuid": "^8.0.1",
    "@typescript-eslint/eslint-plugin": "3.0.2",
    "@typescript-eslint/parser": "3.0.2",
    "chalk": "^4.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "fastify": "^3.3.0",
    "jest": "26.0.1",
    "onchange": "^7.0.2",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2",
    "supertest": "^4.0.2",
    "ts-jest": "26.1.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.4"
  },
  "peerDependencies": {
    "@nestjs/common": "^7.6.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "modulePaths": ["<rootDir>/src/"],
    "moduleNameMapper": {
        "^src/(.*)$": "<rootDir>../src/$1",
        "@/(.*)": "<rootDir>../src/$1"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
